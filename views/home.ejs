<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= content %></p>

<% posts.forEach(function(post) { %>
<div class="row">
  <div class="col-xs-12">
    <h2><%= post.title %></h2>
    <p>
      <%= post.contentTruncated %>
      &nbsp;
      <a href="<%= post.url %>">Read More</a>
    </p>
  </div>
</div>
<% }) %>

<%- include("partials/footer") -%>
